{
  "transform": {
    "\\.(ts|tsx)$": "ts-jest/preprocessor.js"
  },
  "testRegex": "src/.*__tests__/.*\\.(ts|tsx)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "cacheDirectory": "jestCache",
  "globals": {
    "__DEV__": true,
    "ts-jest": {
      "tsConfigFile": "tsconfig.json"
    }
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/index.{ts,tsx}",
    "!**/*.story.tsx",
    "!**/types/*.ts",
    "!**/*.d.ts"
  ]
}
