{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
    ],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceRoot": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
